---
import Container from "../container.astro";
import { Icon } from "astro-icon";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import MenuItem from "./menuItem.astro";

const menuitems = [
  {
    title: "O nás",
    path: "/",
  },
  {
    title: "Přihlášení",
    path: "/prihlaseni",
  },
  {
    title: "Ceník",
    path: "/cenik",
  },
  {
    title: "Pro studenty",
    path: "/studium",
  },
  {
    title: "Kontakty",
    path: "/kontakty",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/">
          <div
            class="flex w-full lg:w-auto items-center justify-between rounded-md bg-red-400 p-2">
            <Icon class="w-8 text-gray-800 mr-2" pack="mdi" name="car" />
            <span class="font-bold text-slate-800 mr-2"> Hlaváček</span><span
              class="text-slate-500">AUTOŠKOLA</span
            >
          </div>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
    </Astronav>

    <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
      <ul class="flex flex-col lg:flex-row lg:gap-3">
        {menuitems.map((item, index) => <MenuItem item={item} />)}
      </ul>
    </MenuItems>
  </header>
</Container>
