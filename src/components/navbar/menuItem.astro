---
type Props = { item: { path: string; title: string } };
const {
  item: { path, title },
} = Astro.props;
const isActive = Astro.url.pathname === path;
---

<li>
  <a
    href={path}
    class=`flex lg:px-3 py-2 hover:text-gray-900 ${isActive ? "text-gray-1000":"text-gray-600 "}`>
    {title}
  </a>
</li>
