---
import Icon from "astro-icon";
import Container from "../components/container.astro";
import Sectionhead from "../components/sectionhead.astro";
import Layout from "../layouts/Layout.astro";

const resourceGroups = [
  {
    title: "Dopravní bezpečnost a informace",
    resources: [
      {
        title: "BESIP",
        description: "Oficiální portál BESIP zaměřený na bezpečnost silničního provozu.",
        href: "http://www.ibesip.cz/",
        icon: "bx:bxs-badge-check",
      },
      {
        title: "DEKRA",
        description: "Poradenství a služby v oblasti technických kontrol vozidel.",
        href: "http://www.dekra.cz/",
        icon: "bx:bxs-window-alt",
      },
      {
        title: "MOTOŽURNÁL",
        description: "Rozhlasový portál zaměřený na motozprávy a dopravní informace.",
        href: "http://www.rozhlas.cz/motozurnal/portal/",
        icon: "bx:bxs-data",
      },
      {
        title: "Zkratky elektronických systémů",
        description: "Přehled a význam různých zkratek pro elektronické systémy ve vozidle.",
        href: "http://www.auto.cz/esc-dcc-rbs-afs-ddd-vite-co-znamenaji-automobilove-zkratky-101809",
        icon: "bx:bxs-help-circle",
      },
    ],
  },
  {
    title: "Asociace a organizace",
    resources: [
      {
        title: "Asociace autoškol",
        description: "Oficiální stránky Asociace autoškol ČR.",
        href: "http://www.asociaceautoskol.cz/",
        icon: "bx:bxs-bot",
      },
      {
        title: "ÚAMK",
        description: "Ústřední automotoklub – aktuální dopravní informace a služby.",
        href: "http://www.uamk.cz/",
        icon: "bx:bxs-file-find",
      },
    ],
  },
  {
    title: "Online testy a hry",
    resources: [
      {
        title: "Zkušební testy Ministerstva dopravy",
        description: "Oficiální online testy pro autoškoly k procvičování dopravních předpisů.",
        href: "http://etesty2.mdcr.cz/",
        icon: "bx:bxs-book",
      },
      {
        title: "Křižovatky hrou",
        description: "Zábavná online aplikace pro procvičování dopravních křižovatek.",
        href: "http://www.zakruta.cz/autoskola-hra/",
        icon: "bx:bxs-user",
      },
    ],
  },
  {
    title: "Dokumenty ke studiu",
    resources: [
      {
        title: "Skupiny platné od 7.11.2014",
        description: "Dokument s přehledem platných řidičských skupin a podmínek.",
        href: "http://www.hlavacekautoskola.cz/skupiny.pdf",
        icon: "bx:bxs-file",
      },
    ],
  },
];
---

<Layout title="Studium">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Informace pro studenty</Fragment>
      <Fragment slot="desc">
        Zde najdete užitečné odkazy a zdroje rozdělené do několika kategorií.
        Neváhejte se na nás kdykoli obrátit s dotazy.
      </Fragment>
    </Sectionhead>

    <section id="resources" class="mt-12">
      <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mb-4">
        Užitečné odkazy a materiály
      </h2>
      <p class="text-lg text-slate-600 mb-12">
        Pro efektivní přípravu na výuku a závěrečné zkoušky v autoškole jsme
        pro vás připravili výběr oficiálních portálů, organizací a online
        nástrojů. Díky nim můžete studovat dopravní předpisy, procvičovat
        testy nebo se informovat o nejnovějších změnách na silnicích.
      </p>

      {resourceGroups.map((group) => (
        <div class="mb-10">
          <h3 class="text-2xl font-semibold mb-4 text-black">
            {group.title}
          </h3>
          <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-8">
            {group.resources.map((item) => (
              <div class="flex gap-4 items-start">
                <div class="mt-1 bg-black rounded-full p-2 w-8 h-8 shrink-0 flex items-center justify-center">
                  <Icon class="text-white text-xl" name={item.icon} />
                </div>
                <div>
                  <a
                    href={item.href}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-lg font-semibold text-black hover:underline"
                  >
                    {item.title}
                  </a>
                  <p class="text-slate-500 mt-2 leading-relaxed">
                    {item.description}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </section>
  </Container>
</Layout>
